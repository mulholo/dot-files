" Enable syntax highlighting
syntax on

" Absolute and relative line number hybrid
set number relativenumber

" Ignore case when searching using only a lowercase term
setglobal smartcase

" Set the number of spaces for a tab
set tabstop=4

" Auto-indentation
set autoindent  " newlines
set smartindent " brackets

" Set the number of spaces for an indentation level
set shiftwidth=4

" Use spaces instead of tabs for indents
set expandtab

" Make backspace behave in a more intuitive way
set smarttab
set softtabstop=4
