# This is Git's per-user configuration file.
[user]
	name = James Mulholland
	email = james@attio.com
[color]
  pager = true
  ui = auto
  status = auto
  diff = auto
  branch = auto
  showBranch = auto
  interactive = auto
  grep = auto
[color "status"]
	header = white
	branch = cyan
  nobranch = red
  unmerged = red
  untracked = cyan
  added = green
  changed = red bold
[color "diff"]
  meta = red bold
  frag = black bold
  func = blue
  old = red strike
  new = green
  commit = blue
  whitespace = red
  context = normal
  newMoved = green dim
  oldMoved = yellow dim
  newMovedAlternative = blue dim
  oldMovedAlternative = red dim
[color "branch"]
  current = cyan
  local = blue
  remote = magenta
  upstream = magenta
  plain = normal
[color "decorate"]
  branch = blue
  remoteBranch = magenta
  tag = magenta
  stash = cyan
  HEAD = blue
[color "interactive"]
  prompt = red
  header = red bold
  error = red
  help = black bold
[color "grep"]
  context = normal
  match = cyan
  filename = blue
  function = blue
  selected = normal
  separator = red bold
linenumber = normal
[core]
	excludesfile = ~/.gitignore
	editor = nvim
  pager = delta --dark --side-by-side
[delta]
    syntax-theme = Solarized (dark)
[difftool]
  prompt = true
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -d -u ~/.vimrc \"$LOCAL\" \"$REMOTE\""
[merge]
	tool = vimdiff
  conflictstyle = diff3
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --branches
  a = add
  c = commit
[mergetool]
	path = nvim -d
[credential "https://github.com"]
	helper = !gh auth git-credential
[init]
	defaultBranch = main
[pull]
	ff = only
